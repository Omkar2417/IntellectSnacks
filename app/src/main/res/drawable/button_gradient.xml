<!-- res/drawable/button_gradient.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:angle="45"
        android:startColor="#152307"
        android:endColor="#94EB67"
        android:type="linear" />

    <!-- Optional rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#2A4F1C" />

</shape>
