<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Hovered state -->
    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="#B47113"/> <!-- Change this to the hover color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#8C5A1D"/> <!-- Darker shade for pressed -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#9E682B"/> <!-- Default color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
